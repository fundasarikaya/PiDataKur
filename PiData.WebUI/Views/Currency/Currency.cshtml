@model PiData.WebUI.Business.Common.CurrencyDTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-success pull-right" href="~/Currency/CurrencyAdd">Yeni</a>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Para Birimleri</h3>


                </div>

                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover" style="overflow-y: scroll;">
                        <tr>
                            <th>Para Birimi</th>
                            <th>Ulke</th>
                            <th>Açıklama</th>
                            <th>Kod</th>
                        </tr>



                        @foreach (var currency in Model.Currencies)
                        {
                            <tr>
                                <td>@currency.Currency</td>
                                <td>@currency.Country</td>
                                <td>@currency.Description</td>
                                <td>@currency.CurrencyCode</td>
                            </tr>
                        }
                    </table>
                </div>


            </div>
        </div>
    </div>

</section>
